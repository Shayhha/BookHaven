<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookHaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookHaven.styles.css" asp-append-version="true" />

    <style>
        .navbar {
            overflow: hidden;
            background-color: #333;
            display: flex;
            justify-content: space-between;
            padding: 0px 10px;
        }

            .navbar a {
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                border: 1px solid #f2f2f2; /* Add border to the buttons */
                margin: 0 5px; /* Add some space between the buttons */
                border-radius: 5px; /* Add border radius */
                transition: all 0.3s ease-in-out; /* Add this line to enable smooth animation */
            }

                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                    transform: scale(1.1); /* Increase size to 110% when hovered */
                }

            .navbar .site-title {
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                cursor: default; /* Remove the pointer cursor */
                font-size: 24px; /* Increase the font size */
            }

                .navbar .site-title a {
                    border: none; /* Remove the border for the site title link */
                    padding: 0px;
                }

                    .navbar .site-title a:hover {
                        background: transparent;
                        color: #f2f2f2;
                    }


            .navbar .search-container {
                display: flex;
                align-items: center;
            }

            .navbar input[type=text] {
                padding: 6px;
                margin-right: 10px;
                font-size: 17px;
                border: none;
                width: 300px; /* Adjust the width of the search bar */
                border-radius: 10px;
            }

            .navbar .search-container button {
                float: right;
                padding: 6px 10px;
                margin-right: 16px;
                background: #ddd;
                font-size: 17px;
                border: none;
                cursor: pointer;
                border-radius: 5px; /* Add border radius */
            }

                .navbar .search-container button:hover {
                    background: #ccc;
                }

            .navbar .auth-links {
                display: flex;
            }

        /* Adjust main layout to ensure bottom border spans the entire width */
        .main {
            flex-grow: 1;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding-left: 0; /* Remove left padding */
            padding-right: 0; /* Remove right padding */
        }

    </style>

</head>
<body>
    <header>
        <div class="navbar">
            <div class="site-title"><a href="/UserHome/showUserHome">BookHeaven</a></div>
            <div class="search-container">
                <form id="searchForm" action="/SearchResults/showSearchResults" method="get">
                    <input type="text" name="searchQuery" placeholder="Search..">
                    <button type="button" onclick="handleSearchButtonClick()">🔍</button>
                </form>
            </div>
            <div class="auth-links">
                <a href="/UserHome/showLoginView" id="loginButton">Login</a>
                <a href="/UserHome/showSignupView" id="signupButton">Sign Up</a>
            </div>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function handleSearchButtonClick() {
            var searchQuery = document.getElementsByName("searchQuery")[0].value;
            // Pass the search query to your C# code (you may need AJAX or other methods depending on your setup)
            // For simplicity, let's assume there's a hidden form input to send the search query to the server
            document.getElementById("searchForm").submit();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
