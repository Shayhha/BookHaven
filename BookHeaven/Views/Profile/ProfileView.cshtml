@model BookHeaven.Models.User;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="~/css/userInfo.css">
</head>
<body>
    <div class="container2">
        <h1>User Profile</h1>
        <button class="logout_button" onclick="userLogout()">Logout</button>
        <button class="edit-button" onclick="editUserInfoButtonClick()">Edit</button>
        <div class="profile-info">
            <h2>User Information</h2>

            <!-- Email input field -->
            <div id="email">
                <p>
                    <strong>Email:</strong>
                    <span id="emailSpan">@Model.email</span>
                </p>
            </div>

            <!-- First name input field -->
            <div id="firstName">
                <p>
                    <strong>First Name:</strong>
                    <span id="firstNameSpan">@Model.fname</span>
                </p>
            </div>

            <!-- Last name input field -->
            <div id="lastName">
                <p>
                    <strong>Last Name:</strong>
                    <span id="lastNameSpan">@Model.lname</span>
                </p>
            </div>

            <!-- Address input fields -->
            <div id="address">
                <p>
                    <strong>Address:</strong>
                    @if (@Model.address != null)
                    {
                        if (Model.address.country != "" && Model.address.city != "" && Model.address.street != "" && Model.address.apartNum != 0)
                        {
                            <span id="addressSpan">@(Model.address.apartNum + ", " + @Model.address.street + ", " + @Model.address.city + ", " + @Model.address.country)</span>
                        }
                        else
                        {
                            <span id="addressSpan"></span>
                        }
                    }
                    else
                    {
                        <span id="addressSpan"></span>
                    }
                    <button class="delete-button" onclick="if(confirmDelete()) deleteAddress()">🗑️</button>
                </p>
            </div>

            <!-- Credit card input fields -->
            <div id="creditCard">
                <p>
                    <strong>Credit Card:</strong>
                    @if (@Model.creditCard != null)
                    {
                        if (Model.creditCard.number != 0 && Model.creditCard.date != "" && Model.creditCard.ccv != 0)
                        {
                            <span id="creditCardSpan">@(Model.creditCard.number + " | " + @Model.creditCard.date + " | " + @Model.creditCard.ccv)</span>
                        }
                        else
                        {
                            <span id="creditCardSpan"></span>
                        }
                    }
                    else
                    {
                        <span id="creditCardSpan"></span>
                    }
                    <button class="delete-button" onclick="if(confirmDelete()) deleteCreditCard()">🗑️</button>
                </p>
            </div>
        </div>
        <div class="purchase-history">
            <h1>Purchase History</h1>

            <div class="order-details">
                <div class="order-info">
                    <div class="left-info">
                        <h5>Order Id: 4124</h5>
                        <h5>Shipping Date: dd/mm/yyyy</h5>
                    </div>
                    <div class="right-info">
                        <h5>Total Price: $125</h5>
                        <h5>Tracking Number: 1d2d19h39</h5>
                    </div>
                </div>
            </div>
            <div class="purchase-table">
                <table>
                    <thead>
                        <tr>
                            <th>Book Name</th>
                            <th>Quantity</th>
                            <th>Price Per Book</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>The Great Gatsby</td>
                            <td>2</td>
                            <td>$10.00</td>
                        </tr>
                        <tr>
                            <td>To Kill a Mockingbird</td>
                            <td>1</td>
                            <td>$15.00</td>
                        </tr>
                        <!-- Add more rows for additional purchases -->
                    </tbody>
                </table>
            </div>

            <div class="order-details">
                <div class="order-info">
                    <div class="left-info">
                        <h5>Order Id: 9023</h5>
                        <h5>Shipping Date: dd/mm/yyyy</h5>
                    </div>
                    <div class="right-info">
                        <h5>Total Price: $552</h5>
                        <h5>Tracking Number: s12sdfc5</h5>
                    </div>
                </div>
            </div>
            <div class="purchase-table">
                <table>
                    <thead>
                        <tr>
                            <th>Book Name</th>
                            <th>Quantity</th>
                            <th>Price Per Book</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>The Great Gatsby</td>
                            <td>2</td>
                            <td>$10.00</td>
                        </tr>
                        <tr>
                            <td>To Kill a Mockingbird</td>
                            <td>1</td>
                            <td>$15.00</td>
                        </tr>
                        <!-- Add more rows for additional purchases -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>


