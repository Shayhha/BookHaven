@model BookHeaven.Models.Signup;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Popup</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/loginSignup.css">

</head>
<body>

    <div class="popup">
        <div class="title">Signup</div>

        <form action="tryToSignup" method="post">
            <div class="mb-3">
                <input type="text" class="form-control formInput" name="firstName" placeholder="First Name">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.firstName)</span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control formInput" name="lastName" placeholder="Last Name">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.lastName)</span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control formInput" name="email" placeholder="Email">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.email)</span>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control formInput" name="password" placeholder="Password">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.password)</span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Signup</button>
        </form>

        <div class="text-center">Already have an account? <a href="showLoginView" style="text-decoration: none;">Login now!</a></div>
    </div>

</body>
</html>
