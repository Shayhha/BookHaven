@model BookHeaven.Models.Login;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Popup</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/loginSignup.css">


</head>
<body>

    <div class="popup">
        <div class="title">Login</div>

        <form action="tryToLogin" method="post">
            <div class="mb-3">
                <input type="text" class="form-control formInput" name="email" placeholder="Email">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.email)</span>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control formInput" name="password" placeholder="Password">
                <span class="validation-error">@Html.ValidationMessageFor(x => x.password)</span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>

        <div class="text-center">Don't have an account? <a href="showSignupView" style="text-decoration: none;">Sign up now!</a></div>
    </div>

</body>
</html>
